<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate android:fromDegrees="-90"
        android:toDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="1200" />
    <translate
        android:fromXDelta="550"
        android:toXDelta="0"
        android:duration="1200"
        />
    <scale
        android:duration="1200"
        android:fromXScale="1.7"
        android:fromYScale="1.7"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" >
    </scale>
</set>